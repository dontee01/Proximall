<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="1"
    android:background="#16edecec"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:background="#fff"
        android:weightSum="1">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00ffffff"
            android:text="Filter"
            android:spinnerMode="dropdown"
            android:id="@+id/filterSpinner"
            android:layout_weight="0.5">

        </Spinner>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart"
                android:textAlignment="textEnd"
                android:typeface="sans"
                android:textStyle="bold"
                android:id="@+id/cartButton"
                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:typeface="sans"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#fff"
                android:background="@drawable/circle_image"
                android:layout_alignParentRight="true"
                android:id="@+id/cartTextView"/>

        </RelativeLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#e0e0e0"></LinearLayout>-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00ffffff"
            android:textColor="#000"
            android:id="@+id/visitStore"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"
            android:text="Visit Store"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#828282"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/mallImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mall2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#a0ffffff"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:layout_weight="0.3"
                        android:text="Bright"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="#a0ffffff"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="About Us"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>


            </RelativeLayout>


            <ProgressBar
                android:id="@+id/ProgressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp" />


            <GridView
                android:id="@+id/GridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:visibility="gone"

               ></GridView>
        </LinearLayout>


    </ScrollView>



</LinearLayout>