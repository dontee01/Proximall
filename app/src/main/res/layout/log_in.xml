<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#351b06"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="511dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#351b06"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:text="ProxyMall"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/linearLayout4" />

                <!--<ImageView-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:layout_above="@+id/linearLayout4"-->
                <!--android:layout_centerHorizontal="true" />-->

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/emailEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/round_grey_backgrounded"
                        android:hint="Email"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="#cb30221b"
                        android:typeface="sans" />


                    <EditText
                        android:id="@+id/passwordEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_grey_backgrounded"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="#cb30221b"
                        android:typeface="sans"

                        />

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/button1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_primary_color_backgrounded"
                        android:text="Login"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linearLayout4"
                        android:layout_gravity="end"
                        android:layout_marginEnd="45dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:text="forgot password ?"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/editText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linkToRegisterButton"
                        android:layout_alignLeft="@+id/linkToRegisterButton"
                        android:layout_alignStart="@+id/linkToRegisterButton"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:text="Don't have an account? Sign up"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:typeface="sans" />


                    <Button
                        android:id="@+id/linkToRegisterWithEmailButton"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/forgot_password"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/forgot_password"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/round_primary_color_backgrounded"
                        android:text="With email"
                        android:textColor="#c1faf8f8"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/forgot_password"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/forgot_password"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/facebook_sign_up_button"
                        android:text="With facebook"
                        android:textColor="#b9cde8"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:typeface="sans" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>