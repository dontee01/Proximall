<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="Television"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:typeface="sans"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_white_backgroud"
               />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="DVD player"
                android:layout_marginTop="10dp"
                android:id="@+id/makeCallButton"
                android:textColor="@color/colorPrimary"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_white_backgroud"
               />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="Cameras"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:typeface="sans"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_white_backgroud"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="Musical Equipment"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_white_backgroud"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="Home Theatres"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:typeface="sans"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_white_backgroud"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="Accessaries"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_white_backgroud"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="LG"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Polystar"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Samsung"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="TCL"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Haier Thermocool"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Panasonic"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Sharp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Sony"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Scanfrost"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="other"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="sans"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_button_white_backgroud"
                    />
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


</LinearLayout>