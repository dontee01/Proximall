<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1cecc08d"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:background="#fff"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="ProxiMall"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon_brown"
            android:textAlignment="textEnd"
            android:typeface="sans"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textStyle="bold"
            android:id="@+id/searchButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:layout_width="50dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart"
                android:textAlignment="textEnd"
                android:typeface="sans"
                android:textStyle="bold"
                android:id="@+id/cartButton"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textAlignment="center"

                android:textColor="#fff"
                android:background="@drawable/circle_image"
                android:layout_alignParentRight="true"
                android:id="@+id/cartTextView"/>

        </RelativeLayout>


        <!--<LinearLayout-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#e0e0e0"></LinearLayout>-->

        <ImageView
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_dots"
            android:textAlignment="textEnd"
            android:text="Visit Store"
            android:typeface="sans"
            android:textStyle="bold"
            android:id="@+id/menuButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e8828282"></LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#abc"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/advert"
                 />


                <LinearLayout
